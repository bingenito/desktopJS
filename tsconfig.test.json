{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "isolatedModules": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/tests/**/*.ts",
    "**/*/vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build",
    "**/coverage",
    "docs"
  ]
}
